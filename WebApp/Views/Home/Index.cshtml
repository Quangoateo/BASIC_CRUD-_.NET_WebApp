
@{
    ViewData["Title"] = "Inventory-Finance Management WebApp";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <!-- Add your CSS stylesheets and scripts here -->
    <style>
        /* Reset default margin and padding */
        body, h1, h2, p, ul {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            color: #333;
        }

        header, nav, main, footer {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            background-color: #007bff;
            color: #fff;
            text-align: center;
        }

        nav ul {
            list-style: none;
            text-align: center;
        }

            nav ul li {
                display: inline-block;
                margin: 0 10px;
            }

                nav ul li a {
                    text-decoration: none;
                    color: #333;
                    font-weight: bold;
                }

                    nav ul li a:hover {
                        color: #007bff;
                    }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            background-color: #007bff;
            color: #fff;
            text-align: center;
            margin-top: 20px;
            padding: 10px 0;
        }
    </style>
</head>
<body>
<header>
    <h1>@ViewData["Title"]</h1>
</header>
<nav>
    <!-- Add navigation links to different sections of your app -->
    <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/home/privacy">More About Privacy</a></li>
        <li><a href="/home/about">About Our Software </a></li>
        <li><a href="/auth/login"> Log in </a></li>
        <li><a href="/auth/register"> Register new account</a></li>
        <li><a href="/test/test"> Test page here</a></li>

    </ul>
</nav>
    
<main>
    <!-- Main content of your app goes here -->
    <div class="container">
        <h2>Welcome to the Financial Management App</h2>
        <p>Our user-friendly and feature-rich financial management
            app is meticulously crafted to provide you with a comprehensive and personalized approach 
            to managing your finances. Say goodbye to the hassle of tracking your expenses 
            on spreadsheets or deciphering complicated financial statements. With Finance,
            you'll have all the tools and insights you need at your fingertips
            allowing you to take control of your financial future with confidence.</p>
    </div>
</main>
    
