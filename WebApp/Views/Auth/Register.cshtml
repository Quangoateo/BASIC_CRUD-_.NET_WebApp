@model RegisterModel

<style>
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* This will center the form vertically on the viewport */
        background-image: url('D:/Year3/Source_Code/C#/FINANCE/WebApp/wwwroot/images/background.jpg')
    }

    form {
        text-align: center; /* Center form contents horizontally */
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

/* Add any other styling you want for form elements here */
</style>

<div class="center-container">
    <form method="post">
        <div>
            <label asp-for="UserName">UserName</label>
            <input type="text" asp-for="UserName" />
        </div>
        <div>
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" />
        </div>
        <div>
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" />
        </div>
        <div>
            <label asp-for="Phone">Phone</label>
            <input type="text" asp-for="Phone" />
        </div>

        <div>
            <button>Register</button>
            <a href="/auth/login">Login</a>
            <a href="/auth/forgot">Forgot Password</a>
        </div>
    </form>
</div>